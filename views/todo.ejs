<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>TCS-ION RIO INTERNSHIP PROJECT</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .task-list {
            margin-top: 20px;
        }
        .task-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            margin-bottom: 10px;
            background-color: #ffffff;
        }
        .completed {
            text-decoration: line-through;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">To-Do List</h1>
        
        <!-- Form to add a new task -->
        <form action="/todo/add/" method="POST" class="mb-3">
            <div class="form-group">
                <input type="text" name="newtodo" class="form-control" placeholder="Add a new task" required>
            </div>
            <div class="form-group">
                <input type="date" name="dueDate" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Task</button>
        </form>

        <div class="task-list">
            <% todolist.forEach((todo, index) => { %>
                <div class="task-item">
                    <div>
                        <input type="checkbox" id="task-<%= index %>" 
                               onchange="location.href='/todo/complete/<%= index %>'" 
                               <%= todo.completed ? 'checked' : '' %> />
                        <label for="task-<%= index %>" class="<%= todo.completed ? 'completed' : '' %>">
                            <%= todo.task %>
                        </label>
                    </div>
                    <div>
                        <a href="/todo/delete/<%= index %>" class="btn btn-danger btn-sm">Delete</a>
                        <a href="/todo/<%= index %>" class="btn btn-warning btn-sm">Edit</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
